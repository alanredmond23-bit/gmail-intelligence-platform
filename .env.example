# Gmail Intelligence Platform - Environment Configuration
# Copy this file to ~/.gmail-intelligence/.env and fill in your values

# Gmail API Configuration
GMAIL_CREDENTIALS_FILE=~/.gmail-intelligence/credentials.json
GMAIL_TOKEN_FILE=~/.gmail-intelligence/token.json
GMAIL_API_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.labels

# Database Configuration
DATABASE_URL=sqlite:///{HOME}/.gmail-intelligence/emails.db
DATABASE_BACKUP_DIR={HOME}/.gmail-intelligence/backups

# AI/LLM Configuration
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-4-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Search Configuration
SEMANTIC_SEARCH_ENABLED=true
BATCH_SIZE=50
SEARCH_TIMEOUT_SECONDS=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE={HOME}/.gmail-intelligence/gmail-intelligence.log

# Feature Flags
ENABLE_GUI=false
ENABLE_MCP_SERVER=false
ENABLE_INCREMENTAL_SYNC=true

# Sync Configuration
SYNC_INTERVAL_MINUTES=30
MAX_RETRIES=3
RETRY_BACKOFF_SECONDS=5

# Optional: Sentry Error Tracking
SENTRY_DSN=

# Optional: S3 Backup (Supabase)
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_BUCKET=gmail-backups
